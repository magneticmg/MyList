<form>
    <fieldset name="item">
        <fields>
    <field name="mylist_item_id" type="hidden"/>
    <field name="item" label="ToDo" type="textarea"/>
    <field name="duedate" label="Duedate" type="date"/>
    <field name="priority" label="Priority" type="list">
             <option value="30">High</option>    
             <option value="20">Normal</option>    
             <option value="10">Low</option>    
    </field>
    <field name="status" label="Status" type="list" >
             <option value="10">10%</option>    
             <option value="20">20%</option>    
             <option value="30">30%</option>
             <option value="40">40%</option>    
             <option value="50">50%</option>    
             <option value="60">60%</option>
             <option value="70">70%</option>    
             <option value="80">80%</option>    
             <option value="90">90%</option>
             <option value="100">100%</option>
        </field>
    </fields>
    </fieldset>          
</form>
